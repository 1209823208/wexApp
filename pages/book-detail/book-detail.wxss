.ex-class {
  background-color: #eefbff !important;
}

.ex-class1 {
  background-color: bisque !important;
}

.content-desc {
  background: #fff;
  margin-top: 20rpx;
  display: flex;
  flex-direction: column;
}

.content-desc  .title {
  text-align: center;
  margin-bottom: 10rpx;
}

.content-desc .desc {
  text-indent: 50rpx;
}

.book-message {
  display: flex;
  flex-direction: column;
  background: #fff;
  margin-top: 20rpx;
}

.book-message .title {
  text-align: center;
  margin-bottom: 10rpx;
}

.book-message-content {
  display: flex;
  flex-direction: row;
}

.book-message-content .vertical1 {
  width: 30%;
}

.book-message-content .vertical2 {
  width: 70%;
}

.book-message-content .vertical1 text {
  display: block;
}

.book-message-content .vertical2 text {
  display: block;
}

.footer-content {
  display: flex;
  flex-direction: row;
  background: #fff;
  position: fixed;
  bottom: 0;
  width: 100%;
  height: 100rpx;
  border-top: 1px solid #eefbff;
}

.input-content {
  border-radius: 10rpx;
  width: 70%;
  border: 1px solid #bbb;
  height: 50rpx;
}

.short-comment-content {
  position: fixed;
  bottom: 0;
  width: 100%;
  height: 300rpx;
  background: #fff;
  z-index: 999;
}

.header {
  display: flex;
  flex-direction: row;
}
.header text{
  width: 50%;
}
.short-comment-content input {
  border: 1px solid #333;
}
