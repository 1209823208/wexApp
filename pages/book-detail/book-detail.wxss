.book-detail-item {
  width: 100%;
  background: #bbb;
}

.detail-content {
  display: flex;
  flex-direction: column;
  justify-items: center;
  align-items: center;
  width: 100%;
  background: #fff;
  margin-bottom: 20rpx;
}

.detail-content .big-image {
  width: 200rpx;
  height: 340rpx;
}

.comment-content {
  background: #fff;
  display: flex;
  flex-direction: column;
}

.comment-content  .title {
  text-align: center;
  margin-bottom: 10rpx;
}

.comment-item {
  margin: auto;
  width: 90%;
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  /* justify-content: space-around; */
}

